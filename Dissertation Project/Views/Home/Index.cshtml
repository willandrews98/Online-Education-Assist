@model IEnumerable<Dissertation_Project.Models.SessonModel>
@{
    ViewData["Title"] = "Home Page";
}

<!-- This is the homepage where all active sesson to be able to join  -->
<div class="container">
    <div class="align-items-center row">
        @foreach (var item in Model)
        {
            <div class="card">
                <h2 class="card-header">@item.Host</h2>
                <div class="card-body">
                    <a asp-action="Chat" asp-route-id="@item.Id" class="btn btn-primary" >Join </a>
                </div>
            </div>
        }
    </div>
</div>


